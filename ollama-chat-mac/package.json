{
  "name": "ollama-chat",
  "productName": "Ollama Chat",
  "version": "1.0.0",
  "description": "A modern chat interface for Ollama models",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-mac": "electron-builder --mac"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/enablerdao/ollama-chat-ui.git"
  },
  "author": "EnablerDAO",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.enablerdao.ollamachat",
    "productName": "Ollama Chat",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "../index.html",
      "../config.json",
      "../ollama-webui-server.py",
      "node_modules/**/*"
    ]
  }
}